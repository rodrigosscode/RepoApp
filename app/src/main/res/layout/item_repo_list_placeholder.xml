<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_light"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        android:paddingEnd="15dp"
        android:paddingBottom="10dp">

        <View
            android:id="@+id/iv_item_author_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />

        <View
            android:id="@+id/tv_item_repo_name"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/item_repo_list_rounded_placeholder_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_item_author_photo"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/tv_item_author_name"
            android:layout_width="160dp"
            android:layout_height="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_repo_list_rounded_placeholder_background"
            app:layout_constraintStart_toStartOf="@id/tv_item_repo_name"
            app:layout_constraintTop_toBottomOf="@id/tv_item_repo_name" />

        <View
            android:id="@+id/tv_item_count_rating"
            android:layout_width="60dp"
            android:layout_height="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_repo_list_rounded_placeholder_background"
            app:layout_constraintStart_toStartOf="@id/tv_item_author_name"
            app:layout_constraintTop_toBottomOf="@id/tv_item_author_name" />

        <View
            android:id="@+id/tv_item_count_forks"
            android:layout_width="60dp"
            android:layout_height="12dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/item_repo_list_rounded_placeholder_background"
            app:layout_constraintStart_toEndOf="@id/tv_item_count_rating"
            app:layout_constraintTop_toTopOf="@id/tv_item_count_rating" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>